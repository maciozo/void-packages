# Template file for 'swftools'
pkgname=swftools
version=0.9.2
revision=1
_xpdf_name=xpdf
_xpdf_version=3.02
create_wrksrc=yes
build_style=gnu-configure
hostmakedepends="flex tar"
makedepends="freetype-devel libjpeg-turbo-devel zlib-devel"
short_desc="SWF manipulation and general utilities"
maintainer="maciozo <maciozo@maciozo.com>"
license="GPL-2.0-or-later"
homepage="https://swftools.org"
distfiles="http://swftools.org/${pkgname}-${version}.tar.gz https://xpdfreader-dl.s3.amazonaws.com/old/${_xpdf_name}-${_xpdf_version}.tar.gz"
checksum="bf6891bfc6bf535a1a99a485478f7896ebacbe3bbf545ba551298080a26f01f1 b33a7d56f454c331ae50996f989e86c9166e57af97b74de28cddf3d51ac11f00"
nocross="Uses a built binary to generate some SWF files before installation, which fails to run due to Exec format error."

post_extract() {
	mv ${pkgname}-${version}/* .
	tar czf ${_xpdf_name}-${_xpdf_version}.tar.gz ${_xpdf_name}-${_xpdf_version}
	mv ${_xpdf_name}-${_xpdf_version}.tar.gz lib/pdf/
}
